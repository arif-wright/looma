{
	"name": "looma-web",
	"private": true,
	"version": "0.0.1",
	"engines": {
		"node": ">=20.19.0"
	},
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"preview:e2e": "dotenv -e .env.local -- vite preview --port 4173 --host 0.0.0.0",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:e2e": "playwright test --reporter=list",
		"seed": "tsx scripts/seed.ts",
		"seed:ci": "NODE_ENV=test tsx scripts/seed.ts"
	},
	"devDependencies": {
		"@playwright/test": "^1.48.0",
		"@sveltejs/adapter-vercel": "^5.5.0",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"autoprefixer": "^10.4.21",
		"dotenv": "^17.2.3",
		"dotenv-cli": "^11.0.0",
		"postcss": "^8.5.6",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"tailwindcss": "^3.4.14",
		"tsx": "^4.20.6",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vitest": "^1.5.0"
	},
	"dependencies": {
		"@supabase/ssr": "^0.5.0",
		"@supabase/supabase-js": "^2.46.0",
		"zod": "^3.23.8"
	}
}
