# Public Supabase credentials
PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
PUBLIC_SUPABASE_ANON_KEY="your-anon-public-key"

# Server-side Supabase access (service role key stays on the server only)
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Comma-separated list of admin emails allowed to access protected dashboards
ADMIN_EMAILS="you@example.com,teammate@example.com"

# Companion LLM controls (server-only)
LOOMA_LLM_ENABLED="true"
OPENAI_API_KEY="sk-..."
LOOMA_LLM_LIGHT_MODEL="gpt-5-nano"
LOOMA_LLM_PEAK_MODEL="gpt-5-mini"
LOOMA_LLM_PEAK_DAILY_CAP="2"
