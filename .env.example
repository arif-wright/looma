# Public Supabase credentials
PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
PUBLIC_SUPABASE_ANON_KEY="your-anon-public-key"

# Server-side Supabase access (service role key stays on the server only)
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Comma-separated list of admin emails allowed to access protected dashboards
ADMIN_EMAILS="you@example.com,teammate@example.com"

# Companion LLM controls (server-only)
LOOMA_LLM_ENABLED="true"
OPENAI_API_KEY="sk-..."
LOOMA_LLM_LIGHT_MODEL="gpt-5-nano"
LOOMA_LLM_PEAK_MODEL="gpt-5-mini"
LOOMA_LLM_PEAK_DAILY_CAP="2"

# CloudWeave governance (server-only)
LOOMA_CLOUDWEAVE_SIGNING_SECRET="replace-with-32-byte-secret"
LOOMA_CLOUDWEAVE_IMPORT_ENABLED="false"
LOOMA_CLOUDWEAVE_EXPORT_VERSION="cw-0.1"

# Mission tuning overrides (optional; DB runtime_tuning is also supported)
TUNING_MISSIONS_DAILY_COUNT="3"
TUNING_MISSIONS_WEEKLY_COUNT="3"
TUNING_MISSIONS_REPEAT_AVOIDANCE_WINDOW="1"

# Daily streak milestone thresholds (cosmetic unlock cadence)
TUNING_MILESTONE_DAILY_STREAK_3_THRESHOLD="3"
TUNING_MILESTONE_DAILY_STREAK_7_THRESHOLD="7"
TUNING_MILESTONE_DAILY_STREAK_14_THRESHOLD="14"
